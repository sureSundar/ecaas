<h1>Listing subdomains</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subdomains.each do |subdomain| %>
      <tr>
        <td><%= subdomain.email %></td>
        <td><%= link_to 'Show', subdomain %></td>
        <td><%= link_to 'Edit', edit_subdomain_path(subdomain) %></td>
        <td><%= link_to 'Destroy', subdomain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

